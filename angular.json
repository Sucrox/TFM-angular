{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "tfm-angular": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/tfm-angular",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/assets",
              {
                "glob": "**/*",
                "input": "src/app/shared/ui/assets",
                "output": "/assets/shared"
              }
            ],
            "styles": [
              "src/styles.scss",
              "node_modules/@adrian_alonso/component-library/lib/icons/style.css",
              "node_modules/@adrian_alonso/component-library/lib/fonts/style.css",
              "node_modules/@adrian_alonso/component-library/lib/variables/style.css",
              "node_modules/@adrian_alonso/component-library/lib/component-library.css"
            ],
            "scripts": [
              "node_modules/@webcomponents/webcomponentsjs/webcomponents-loader.js"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all",
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "tfm-angular:build:production"
            },
            "development": {
              "buildTarget": "tfm-angular:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.scss",
              "node_modules/@adrian_alonso/component-library/lib/icons/style.css",
              "node_modules/@adrian_alonso/component-library/lib/fonts/style.css",
              "node_modules/@adrian_alonso/component-library/lib/variables/style.css",
              "node_modules/@adrian_alonso/component-library/lib/component-library.css"
            ],
            "scripts": [
              "node_modules/@webcomponents/webcomponentsjs/webcomponents-bundle.js"
            ]
          }
        }
      }
    }
  }
}
